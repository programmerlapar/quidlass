{
  "name": "quidlass",
  "version": "1.2.0",
  "description": "Quidlass - Beautiful liquid glassmorphism React component library. Create stunning glass-like UI effects with liquid distortion, customizable blur, swirl effects, and interactive animations. Perfect for modern React apps, cards, modals, buttons, and tooltips. Zero dependencies, TypeScript support, and performance optimized.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "files": [
    "dist/index.js",
    "dist/index.esm.js",
    "dist/index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "build:watch": "rollup -c rollup.config.mjs --watch",
    "dev": "vite --mode demo",
    "preview": "vite preview",
    "prepublishOnly": "yarn build",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "demo:dev": "cd demo && vite",
    "demo:build": "cd demo && yarn install && vite build",
    "demo:preview": "cd demo && vite preview"
  },
  "keywords": [
    "react",
    "react-component",
    "react-library",
    "glassmorphism",
    "glass-morphism",
    "liquid-glass",
    "liquid-glassmorphism",
    "glass-effect",
    "glass-ui",
    "ui-component",
    "ui-library",
    "backdrop-filter",
    "svg-filter",
    "displacement-map",
    "blur-effect",
    "frosted-glass",
    "glass-card",
    "glass-button",
    "glass-modal",
    "modern-ui",
    "react-typescript",
    "typescript",
    "component-library",
    "css-effects",
    "visual-effects",
    "interactive-ui",
    "morphic",
    "elasticity",
    "swirl-effect"
  ],
  "author": {
    "name": "programmerlapar",
    "url": "https://github.com/programmerlapar"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/programmerlapar/quidlass.git"
  },
  "homepage": "https://programmerlapar.github.io/quidlass/",
  "bugs": {
    "url": "https://github.com/programmerlapar/quidlass/issues"
  },
  "funding": {
    "type": "individual",
    "url": "https://www.paypal.com/paypalme/programmerlapar"
  },
  "packageManager": "yarn@1.22.22",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^12.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^4.0.7",
    "jsdom": "^24.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.5.0",
    "vite": "^7.2.1",
    "vitest": "^4.0.7"
  }
}
